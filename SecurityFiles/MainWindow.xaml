<Window x:Class="SecurityFiles.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SecurityFiles"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ToolBar HorizontalAlignment="Left" Height="26" VerticalAlignment="Top" Width="790">
            <Button x:Name="TBOpenFile" Content="OpenFile" Margin="0,0,10,0" Click="TBOpenFile_Click">

            </Button>
            <Button x:Name="Add" Content="Добавить файл" Margin="0,0,10,0" Click="Temple_1_Click">

            </Button>
            <Button x:Name="Delete" Content="Удалить файл" Margin="0,0,10,0" Click="Temple_2_Click">

            </Button>
            <Button x:Name="Temple_3" Content="Зашифровать файл" Margin="0,0,10,0" Click="Temple_3_Click">

            </Button>
            <Button x:Name="Temple_4" Content="Расшифровать файл" Margin="0,0,10,0" Click="Temple_4_Click">

            </Button>
        </ToolBar>
        <Label Content="Label" x:Name="Mylable" DataContext="{Binding Path=text}" HorizontalAlignment="Left" Margin="10,39,0,0" VerticalAlignment="Top" Height="385" Width="256"/>

    </Grid>
</Window>
